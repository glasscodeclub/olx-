        <!-- ############ page css -->

        <link rel="stylesheet" href="../public/css/login.css">

    <!-- Title -->

    <title>Olx-copy</title>

</head>

<body>
    
    <div class=" container ">
        <img src="../public/img/business.svg" class= "side-img" >
        <img src="../public/img/bottom.svg" class="bottom-img">
        <img src="../public/img/bottom.svg" class="top-img">
        
        <!-- ------LOGIN FORM ----- -->
        <div class="login-form">
            <form class="needs-validation" novalidate>
                <img src="../public/img/profile.svg" class="profile-pic">
                <h2>welcome</h2>
                <div class="form-floating mb-3">
                  <input type="email" class="form-control" id="Email" placeholder="Email" required>
                  <label for="name" class="form-label"><i class="fas fa-user"></i> &nbsp &nbsp Email Address</label>
                  <div class="invalid-feedback">
                     Please Enter a valid email!
                  </div>
                </div>
                <div class="form-floating">
                  <input type="password" class="form-control" id="Password" placeholder="Password" required>
                  <label for="Password" class="form-label"><i class="fas fa-lock"></i> &nbsp &nbsp Password</label>
                  <div class="invalid-feedback">
                    Please enter your password!
                  </div>
                </div>
                  <div class="form-check checkbox">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                      Agree to terms and conditions
                    </label>
                    <div class="invalid-feedback">
                      You must agree before submitting.
                    </div>
                    
                  </div>
                  <div class="submit-btn">
                    <button class="btn btn-primary" type="submit">Submit form</button>
                  </div>
                 
                </div>
              </form>
        </div>
    </div>

</body>

<!-- ######### Scripts -->

